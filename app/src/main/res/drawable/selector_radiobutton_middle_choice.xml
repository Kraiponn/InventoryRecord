<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="200"
    android:exitFadeDuration="450">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/text_black"
                android:width="2dp"/>
            <padding
                android:top="9dp" android:bottom="9dp"
                android:left="12dp" android:right="12dp"/>
            <solid android:color="@color/text_transparent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/text_black"
                android:width="2dp"/>
            <padding
                android:top="9dp" android:bottom="9dp"
                android:left="12dp" android:right="12dp"/>
            <solid android:color="@color/text_white"/>
        </shape>
    </item>

</selector>